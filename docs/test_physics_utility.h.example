TEST_CASE("[Physics3DUtility] Multiple physics components") {
	REQUIRE_FLECS_SERVER();
	
	FlecsServer *server = FlecsServer::get_singleton();
	RID world_id = server->create_world();
	
	RID space_id = PhysicsServer3D::get_singleton()->space_create();
	
	// Create multiple entities with different physics components
	RID area_entity = Physics3DUtility::create_area(world_id, "Area1", space_id);
	RID body_entity = Physics3DUtility::create_body(world_id, "Body1", space_id);
	RID joint_entity = Physics3DUtility::create_joint(world_id, "Joint1", space_id);
	
	// Verify all are valid (if implementation supports it)
	if (area_entity.is_valid()) {
		flecs::entity e1 = server->_get_entity(world_id, area_entity);
		CHECK(e1.has<Area3DComponent>());
	}
	
	if (body_entity.is_valid()) {
		flecs::entity e2 = server->_get_entity(world_id, body_entity);
		CHECK(e2.has<Body3DComponent>());
	}
	
	if (joint_entity.is_valid()) {
		flecs::entity e3 = server->_get_entity(world_id, joint_entity);
		CHECK(e3.has<Joint3DComponent>());
	}
	
	PhysicsServer3D::get_singleton()->free_rid(space_id);
	server->free_world(world_id);
}

