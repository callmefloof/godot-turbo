// ========================================================================
// Physics2DUtility Tests
// ========================================================================

TEST_CASE("[Physics2DUtility] Create area component") {
	REQUIRE_FLECS_SERVER();
	
	FlecsServer *server = FlecsServer::get_singleton();
	RID world_id = server->create_world();
	
	RID space_id = PhysicsServer2D::get_singleton()->space_create();
	
	// Create area using static method
	RID entity_rid = Physics2DUtility::create_area(world_id, "TestArea", space_id);
	
	if (entity_rid.is_valid()) {
		// Verify component was added
		flecs::entity entity = server->_get_entity(world_id, entity_rid);
		CHECK(entity.is_valid());
		CHECK(entity.has<Area2DComponent>());
	}
	
	PhysicsServer2D::get_singleton()->free_rid(space_id);
	server->free_world(world_id);
}

