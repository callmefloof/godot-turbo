TEST_CASE("[Navigation2DUtility] Singleton access") {
	Navigation2DUtility *util = Navigation2DUtility::get_singleton();
	CHECK(util != nullptr);
	
	// Should return same instance
	Navigation2DUtility *util2 = Navigation2DUtility::get_singleton();
	CHECK(util == util2);
}

TEST_CASE("[Navigation2DUtility] Create NavAgent2D component") {
	REQUIRE_FLECS_SERVER();
	
	FlecsServer *server = FlecsServer::get_singleton();
	RID world_id = server->create_world();
	
	Navigation2DUtility *util = Navigation2DUtility::get_singleton();
	if (!util) {
		MESSAGE("Skipping test - Navigation2DUtility not available");
		server->free_world(world_id);
		return;
	}
	
	RID entity_rid = server->create_entity(world_id);
	CHECK(entity_rid.is_valid());
	
	// Create NavAgent2D component
	RID agent_rid = util->create_nav_agent_2d(world_id, entity_rid);
	CHECK(agent_rid.is_valid());
	
	// Verify component was added
	flecs::entity entity = server->_get_entity(world_id, entity_rid);
	CHECK(entity.has<NavAgent2DComponent>());
	
	const NavAgent2DComponent& agent_comp = entity.get<NavAgent2DComponent>();
	CHECK(agent_comp.agent_id == agent_rid);
	
	server->free_world(world_id);
}

