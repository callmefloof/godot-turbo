TEST_CASE("[Navigation3DUtility] Stress test - many navigation agents") {
	REQUIRE_FLECS_SERVER();
	
	FlecsServer *server = FlecsServer::get_singleton();
	RID world_id = server->create_world();
	
	Navigation3DUtility *util = Navigation3DUtility::get_singleton();
	if (!util) {
		MESSAGE("Skipping test - Navigation3DUtility not available");
		server->free_world(world_id);
		return;
	}
	
	const int COUNT = 100;
	Vector<RID> entities;
	Vector<RID> agents;
	
	// Create many navigation agents
	for (int i = 0; i < COUNT; i++) {
		RID entity_rid = server->create_entity(world_id);
		entities.push_back(entity_rid);
		
		RID agent_rid = util->create_nav_agent_3d(world_id, entity_rid);
		agents.push_back(agent_rid);
		
		CHECK(agent_rid.is_valid());
	}
	
	// Verify all agents exist and have components
	for (int i = 0; i < COUNT; i++) {
		flecs::entity entity = server->_get_entity(world_id, entities[i]);
		CHECK(entity.has<NavAgent3DComponent>());
		
		const NavAgent3DComponent& agent_comp = entity.get<NavAgent3DComponent>();
		CHECK(agent_comp.agent_id == agents[i]);
	}
	
	server->free_world(world_id);
}

