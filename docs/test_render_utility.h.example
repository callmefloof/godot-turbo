TEST_CASE("[RenderUtility3D] Multiple render instances") {
	REQUIRE_FLECS_SERVER();
	REQUIRE_RENDERING_SERVER();
	
	FlecsServer *server = FlecsServer::get_singleton();
	RID world_id = server->create_world();
	
	RenderUtility3D *util = RenderUtility3D::get_singleton();
	if (!util) {
		MESSAGE("Skipping test - RenderUtility3D not available");
		server->free_world(world_id);
		return;
	}
	
	const int COUNT = 10;
	Vector<RID> entities;
	Vector<RID> instances;
	
	// Create multiple mesh instances
	for (int i = 0; i < COUNT; i++) {
		RID entity_rid = server->create_entity(world_id);
		entities.push_back(entity_rid);
		
		RID instance_rid = util->create_mesh_instance(world_id, entity_rid);
		instances.push_back(instance_rid);
		
		CHECK(instance_rid.is_valid());
	}
	
	// Verify all have RenderInstanceComponent
	for (int i = 0; i < COUNT; i++) {
		flecs::entity entity = server->_get_entity(world_id, entities[i]);
		CHECK(entity.has<RenderInstanceComponent>());
		
		const RenderInstanceComponent& render_comp = entity.get<RenderInstanceComponent>();
		CHECK(render_comp.instance_id == instances[i]);
	}
	
	server->free_world(world_id);
}

