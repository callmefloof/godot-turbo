		const RenderInstanceComponent& render_comp = entity.get<RenderInstanceComponent>();
		CHECK(render_comp.instance_id == instances[i]);
	}
	
	server->free_world(world_id);
}

TEST_CASE("[RenderUtility3D] Mixed component types") {
	REQUIRE_FLECS_SERVER();
	REQUIRE_RENDERING_SERVER();
	
	FlecsServer *server = FlecsServer::get_singleton();
	RID world_id = server->create_world();
	
	RenderUtility3D *util = RenderUtility3D::get_singleton();
	if (!util) {
		MESSAGE("Skipping test - RenderUtility3D not available");
		server->free_world(world_id);
		return;
	}
	
	// Create entities with different render components
	RID entity1 = server->create_entity(world_id);
	RID entity2 = server->create_entity(world_id);
	RID entity3 = server->create_entity(world_id);
	
	RID instance_rid = util->create_mesh_instance(world_id, entity1);
	RID camera_rid = util->create_camera(world_id, entity2);
	RID light_rid = util->create_directional_light(world_id, entity3);
	
	CHECK(instance_rid.is_valid());
	CHECK(camera_rid.is_valid());
	CHECK(light_rid.is_valid());
	
	// Verify all components exist
	flecs::entity e1 = server->_get_entity(world_id, entity1);
	flecs::entity e2 = server->_get_entity(world_id, entity2);
	flecs::entity e3 = server->_get_entity(world_id, entity3);
	
	CHECK(e1.has<RenderInstanceComponent>());
	CHECK(e2.has<CameraComponent>());
	CHECK(e3.has<DirectionalLight3DComponent>());
	
	server->free_world(world_id);
}

