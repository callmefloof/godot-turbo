// ========================================================================

TEST_CASE("[RenderUtility2D] Singleton access") {
	RenderUtility2D *util = RenderUtility2D::get_singleton();
	CHECK(util != nullptr);
	
	// Should return same instance
	RenderUtility2D *util2 = RenderUtility2D::get_singleton();
	CHECK(util == util2);
}

TEST_CASE("[RenderUtility2D] Create canvas item component") {
	REQUIRE_FLECS_SERVER();
	REQUIRE_RENDERING_SERVER();
	
	FlecsServer *server = FlecsServer::get_singleton();
	RID world_id = server->create_world();
	
	RenderUtility2D *util = RenderUtility2D::get_singleton();
	if (!util) {
		MESSAGE("Skipping test - RenderUtility2D not available");
		server->free_world(world_id);
		return;
	}
	
	RID entity_rid = server->create_entity(world_id);
	CHECK(entity_rid.is_valid());
	
	// Create CanvasItem component
	util->create_canvas_item(world_id, entity_rid);
	
	// Verify component was added
	flecs::entity entity = server->_get_entity(world_id, entity_rid);
	CHECK(entity.has<CanvasItemComponent>());
	
	server->free_world(world_id);
}

TEST_CASE("[RenderUtility2D] Multiple canvas items") {
	REQUIRE_FLECS_SERVER();
	REQUIRE_RENDERING_SERVER();
	
	FlecsServer *server = FlecsServer::get_singleton();
	RID world_id = server->create_world();
	
	RenderUtility2D *util = RenderUtility2D::get_singleton();
	if (!util) {
		MESSAGE("Skipping test - RenderUtility2D not available");
		server->free_world(world_id);
		return;
	}
	
	const int COUNT = 10;
	Vector<RID> entities;
	
	// Create multiple canvas items
	for (int i = 0; i < COUNT; i++) {
		RID entity_rid = server->create_entity(world_id);
		entities.push_back(entity_rid);
		util->create_canvas_item(world_id, entity_rid);
	}
	
	// Verify all have CanvasItemComponent
	for (int i = 0; i < COUNT; i++) {
		flecs::entity entity = server->_get_entity(world_id, entities[i]);
		CHECK(entity.has<CanvasItemComponent>());
	}
	
	server->free_world(world_id);
}

TEST_CASE("[RenderUtility2D] Invalid world ID") {
	RenderUtility2D *util = RenderUtility2D::get_singleton();
	if (!util) {
		MESSAGE("Skipping test - RenderUtility2D not available");
		return;
	}
	
	RID invalid_world;
	RID invalid_entity;
	
	// Should handle invalid world gracefully - no crash expected
	util->create_canvas_item(invalid_world, invalid_entity);
	// If we get here without crashing, the test passes
	CHECK(true);
}

