		server->free_world(world_id);
		return;
	}
	
	const int COUNT = 100;
	Vector<RID> entities;
	Vector<RID> instances;
	
	// Create many mesh instances
	for (int i = 0; i < COUNT; i++) {
		RID entity_rid = server->create_entity(world_id);
		entities.push_back(entity_rid);
		
		RID instance_rid = util->create_mesh_instance(world_id, entity_rid);
		instances.push_back(instance_rid);
		
